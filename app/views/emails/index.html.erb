<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Object</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
      <div id = "object">
        <td><%= email.object %></td>
      </div>
      <div id = "body">
        <td><%= email.body %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' },
        :remote => true, :class => 'delete_email' %></td>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to "New Email", new_email_path, id: "new_link", remote: true %>