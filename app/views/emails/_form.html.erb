<%= form_for @email, remote: true do |form| %>

  <div class="field">
    <%= form.label :object %>
    <%= form.text_field :object, id: :email_object %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :email_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
